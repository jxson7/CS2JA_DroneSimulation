    @Override
    public void start(Stage stage) throws Exception {
        stage.setTitle("26017434 Drone Simulation: GUI Edition");
        //Parent root = FXMLLoader.load(getClass().getResource("sample.fxml"));
        Group root = new Group();
        // stage.setScene(new Scene(root, 300, 275));

        BorderPane border = new BorderPane();
        //border.setTop(setMainMenu());
        Canvas canvas = new Canvas(xSize, ySize);

        root.getChildren().add(canvas);
        myCanvas = new myCanvas(canvas.getGraphicsContext2D(), xSize, ySize);
        da = new DroneArena(myCanvas.xCanvasSize, myCanvas.yCanvasSize);
//        //da.addDrone();
//        border.setCenter(root);							// put group in centre pane


        //stage.setScene(new Scene(xSize, ySize));
        Scene scene = new Scene(border, xSize * 1.2, ySize * 1.2);

        new AnimationTimer()            // create timer
        {
            public void handle(long currentNanoTime) {
                // define handle for what do at this time

            }

        }.start();
        stage.setScene(scene);
        stage.show();
    }


